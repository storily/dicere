{
    "name": "storily/dicere",
    "license": "Apache-2.0",
    "type": "project",
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "optimize-autoloader": true,
    "prefer-stable": true,
    "require": {
        "php": "^7.1.9",
        "algolia/algoliasearch-client-php": "^1.20",
        "fideloper/proxy": "^3.3.4",
        "folklore/graphql": "^1.0.25",
        "itsdamien/laravel-heroku-config-parser": "^1.1",
        "laravel/lumen-framework": "^5.5.0"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.7.1",
        "mockery/mockery": "^0.9.9",
        "phpunit/phpunit": "^6.3.0",
        "squizlabs/php_codesniffer": "^3.0.2",
        "vlucas/phpdotenv": "^2.4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/",
            "database/"
        ]
    },
    "scripts": {
        "lint": "composer syntax && composer style",
        "style": "vendor/bin/phpcs -spn",
        "style:all": "vendor/bin/phpcs -sp",
        "style:fix": "vendor/bin/phpcbf -sp",
        "syntax": "find . -path ./vendor -prune -o -iname '*.php' | xargs -n1 php -l"
    }
}
