{
    "name": "storily/dicere",
    "description": "Telling. API and Admin services for Cogitare.",
    "license": "Apache-2.0",
    "type": "project",
    "require": {
        "php": ">=7.1.0",
        "algolia/algoliasearch-client-php": "^1.20.1",
        "fideloper/proxy": "^3.3.4",
        "folklore/graphql": "^1.0.25",
        "guzzlehttp/guzzle": "^6.3",
        "itsdamien/laravel-heroku-config-parser": "^1.1",
        "laravel/framework": "^5.5.0",
        "laravel/tinker": "^1.0.0"
    },
    "require-dev": {
        "filp/whoops": "^2.1.10",
        "fzaninotto/faker": "^1.7.1",
        "mockery/mockery": "^0.9.9",
        "phpunit/phpunit": "^6.4.0",
        "squizlabs/php_codesniffer": "^3.1.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "lint": [
          "composer syntax",
          "composer style"
        ],
        "style": "vendor/bin/phpcs -spn",
        "style:all": "vendor/bin/phpcs -sp",
        "style:fix": "vendor/bin/phpcbf -sp",
        "syntax": "find . -path ./vendor -prune -o -iname '*.php' | xargs -n1 php -l",
        "test": "phpunit",
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
